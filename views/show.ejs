<%- include('header.ejs') %>

    <body>
        <h1><%=job.name%></h1>
        <a class="showLink" src="<%=job.link%>">
        <p class="showDescription"> <%=job.description%></p>
        <p> payrange: $<%=job.payrange%></p>
        <div class="showButtons">
          <button class="button">
            <a href="/jobs/<%= job._id %>/edit">Edit this job</a>
          </button>
          <form action="/jobs/<%= job._id%>?_method=DELETE" method="POST">
            <input class="button" type="submit" value="Delete">
          </form>
          <button class="button">
            <a href="/jobs">Back to Jobs </a>
          </button>
        </div>
    </body>
</html>